{% extends "_layouts/_base" %}

{% set title = siteName %}
{% set docTitle = 'Projects | Piano Works'%}
{% set metaDescription = 'Template Meta Description Here' %}

{% block body %}

<!-- ORGANISMS : Header -->
{% include('_partials/_organisms/_sub-header') with {
} %}

<!-- SECTIONS : Breadcrumbs -->
{% include('_partials/_organisms/_breadcrumbs') with {
  list: [{title:'Projects', url:'/projects'}, {title:entry.title, url:'#'}],
} %}

<!-- SECTIONS : Hero -->
{% include('singles/projects/_single/_partials/_hero') with {
} %}

<!-- SECTIONS: Video -->
{% set mainAreaBlock = entry.projectMainArea.one() %}
{% if mainAreaBlock.type == "newVideoProject" %}
  {% include('singles/projects/_single/_partials/_video') with {
    block: mainAreaBlock,
  } %}
{% elseif mainAreaBlock.type == "newGalleryProject" %}
  {% include('singles/projects/_single/_partials/_gallery') with {
    block: mainAreaBlock,
  } %}
{% endif %}

<!-- ORGANISMS : Contact Form -->
{% include('_partials/_organisms/_contact-form') %}

<!-- ORGANISMS : Footer -->
{% include('_partials/_organisms/_footer') %}

<!-- SECTIONS : Lightcase -->
{% include('_scripts/lightcase.twig') with {
} %}

{% endblock %}
